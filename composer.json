{
    "name": "crumbls/laravel-cli-table",
    "description": "A Laravel package providing a selectable console table with arrow key navigation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chase Miller",
            "email": "chase@crumbls.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "symfony/console": "^7.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Crumbls\\LaravelCliTable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Crumbls\\LaravelCliTable\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Crumbls\\LaravelCliTable\\LaravelCliTableServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "pest tests/Unit/NonInteractiveTest.php tests/Unit/KeyDetectionTest.php",
        "test-all": "pest",
        "test-coverage": "pest --coverage tests/Unit/NonInteractiveTest.php tests/Unit/KeyDetectionTest.php",
        "phpstan": "phpstan analyse src tests --level 4",
        "lint": "phpstan analyse src tests --level 4"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}